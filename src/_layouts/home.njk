---
layout: base
masonry: true
---

<div class="wrapper">
  <header class="full | section" style="--spot-color: var(--color-secondary)">
    <div 
      class="section__inner flow region"
      style="--region-space-top: var(--space-xl-2xl)"
    >
      <h1 class="text-center text-base-light">{{ title }}</h1>
    </div>
    {% include 'svg/divider-waves.svg' %}
  </header>

  <article class="full | region">
    <div class="wrapper flow prose">{{ content | safe }}</div>
  </article>

  <section class="full | region">
    {% readerBar "0px" %}
    <div class="wrapper flow prose" style="--region-space-bottom: var(--space-xs)">
      <h2>{{ blog.title }}</h2>
      <!-- blog intro text is optional. -->

      {% if blog.intro %}
        <p>{{ blog.intro }}</p>
      {% endif %}

      <ul
        class="feature | grid region"
        role="list"
        data-rows="masonry"
        data-layout="50-50"
      >
        <!-- loop posts -->
        {% set itemList = collections.posts %}
        {% for item in itemList.slice(0, 4) %}
          <!-- activate tags -->
          {% set activateTags = true %}
          <!-- set heading context -->
          {% set headingContext = "h3" %}
          <!-- card -->
          {% include 'components/card.njk' %}
        {% endfor %}
      </ul>
      <a href="/blog">Read more!</a>
    </div>
  </section>

