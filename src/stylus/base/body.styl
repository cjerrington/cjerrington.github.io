body
  margin 0
  line-height 1.5
  font-family default_font
  color text_color
  background-color bg_color
  min-height 100vh
  display grid
  grid-template-rows auto 1fr auto
  width 100%

  &.dark
    color text_color_dark
    background-color bg_color_dark

search
input[type="text"]
textarea
  display block
  width calc(100% - 24px)
  font-size 18px
  font-weight 600
  color text_color
  padding 10px
  border 2px solid bg_color
  border-radius 4px

  &.dark
    color text_color_dark
    background-color bg_color_dark
  
textarea
  height 150px

.webmauthor img
  width 48px
  height 48px
  border-radius 50%

.hidden
  display none